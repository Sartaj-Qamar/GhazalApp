<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_data_screen"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bottom_toolbar_container"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_90sdp"
        android:background="@drawable/pdf_cardbg"
        android:gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:orientation="horizontal">


        <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
            <ImageView
                android:id="@+id/arrowpdf_iv"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/arrow_drop_down_circle"
                app:tint="@color/black" />
        <ImageView
            android:id="@+id/pdf_iv"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/pdf_folder" />

            <TextView
                android:id="@+id/pdf_name"
                style="@style/quotetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toStartOf="@+id/pdf_iv"
                android:paddingBottom="5dp"
                android:layout_marginEnd="@dimen/_20sdp"

                android:text=" عنوان برائے تحقیق"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/pdf_size"
                style="@style/quotetext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/pdf_name"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_toStartOf="@+id/pdf_iv"
                android:text=" عنوان برائے تحقیق"
                android:textColor="@color/black" />

        </RelativeLayout>
    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>