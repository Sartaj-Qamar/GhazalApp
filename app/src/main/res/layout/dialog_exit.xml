<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_25sdp"
    android:gravity="center"

    android:background="@drawable/mainscreen_bg"
  >

    <TextView
        android:id="@+id/waris_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="وارث شاہ"
        style="@style/warisShah_title"
        android:layout_gravity="center"
      />

    <!-- Dialog Message -->
<TextView
android:id="@+id/dialogMessage"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="کیا آپ ہماری ایپ سے باہر جانا چاہتے ہیں؟"
style="@style/detailtext"
android:layout_gravity="center"
/>

    <!-- Buttons for Exit Confirmation -->
<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_gravity="center"
android:paddingTop="16dp"
    >
    <RelativeLayout
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/unclick_bg">

<TextView
    android:id="@+id/btnStay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ریٹنگ دیں"
    style="@style/unclick_btn"
    android:layout_marginStart="@dimen/_15sdp"
    android:layout_marginEnd="@dimen/_15sdp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@drawable/click_btn">

        <TextView
            android:id="@+id/btnExit"
            style="@style/backpres_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_23sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:text=" جی ہاں"
            android:textAlignment="center" />
    </RelativeLayout>
</LinearLayout>
    </LinearLayout>
