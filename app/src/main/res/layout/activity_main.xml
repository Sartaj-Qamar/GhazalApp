<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@drawable/ic_bg"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">

                <ImageView
                    android:id="@+id/toggle"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:src="@drawable/menu" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/croissant_one"
                    android:text="Waris Shah"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25ssp" />


            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_90sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/flower_1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_300sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:src="@drawable/flower" />

        <ImageView
            android:id="@+id/flower_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_300sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:src="@drawable/flower" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bottom_flower1"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/bottom_flower" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_10sdp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ghzal_cv"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardCornerRadius="15dp"
                    android:background="@drawable/ripple"

                    app:cardBackgroundColor="@color/toolbar_color">

                    <TextView
                        android:id="@+id/ghaazal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="غزلیں"
                        style="@style/maintext"
                        android:background="@drawable/ripple"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20ssp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/nazam_cv"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/toolbar_color">

                    <TextView
                        android:id="@+id/nazam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="نظمیں"
                        android:background="@drawable/ripple"

                        style="@style/maintext"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20ssp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/qasaid_cv"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/toolbar_color">

                    <TextView
                        android:id="@+id/qasaid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="قصائد"
                        android:background="@drawable/ripple"

                        style="@style/maintext"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20ssp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/qatat_cv"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/toolbar_color">

                    <TextView
                        android:id="@+id/qataat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="قطعات"
                        android:background="@drawable/ripple"

                        style="@style/maintext"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20ssp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/rabayt_cv"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/toolbar_color"
                    app:cardCornerRadius="15dp">

                    <TextView
                        android:id="@+id/rabiyat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="رباعیات"
                        style="@style/maintext"
                        android:background="@drawable/ripple"

                        android:textColor="@color/white"
                        android:textSize="@dimen/_20ssp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/mutafariq_cv"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/toolbar_color">

                    <TextView
                        android:id="@+id/mutafariq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="متفرق"
                        style="@style/maintext"
                        android:background="@drawable/ripple"

                        android:textColor="@color/white"
                        android:textSize="@dimen/_20ssp" />
                </androidx.cardview.widget.CardView>

            </GridLayout>

            <ImageView
                android:id="@+id/bottom_flower"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/bottom_flower" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/flame_1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/frame__1_" />


                <ImageView
                    android:id="@+id/flame_2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/frame__2_" />
            </RelativeLayout>

            <!--                <TextView-->
            <!--                    android:id="@+id/mutafariq"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_marginBottom="@dimen/_9sdp"-->
            <!--                    android:text="متفرق"-->
            <!--                    android:textAlignment="center"-->
            <!--                    android:textSize="@dimen/_20ssp" />-->

            <!--                <ImageView-->
            <!--                    android:id="@+id/line_6"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_gravity="center"-->
            <!--                    android:layout_marginBottom="@dimen/_9sdp"-->
            <!--                    android:src="@drawable/line_img" />-->


        </LinearLayout>


    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navview"
        android:layout_gravity="start"
        android:layout_height="match_parent"
        android:layout_width="@dimen/_210sdp"
        android:background="@color/background_color"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="@color/toolbar_color"
        app:itemTextColor="@color/black"
        app:itemTextAppearance="@style/RobotoTextViewStyle"
        app:menu="@menu/bottom_nav_menu"
        />


</androidx.drawerlayout.widget.DrawerLayout>