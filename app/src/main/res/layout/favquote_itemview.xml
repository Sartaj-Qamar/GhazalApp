<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_data_screen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/number_count"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_5sdp"

            android:layout_marginEnd="@dimen/_5sdp"
            android:gravity="center"
            android:text=".0" />

        <TextView
            android:id="@+id/title_tv"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toStartOf="@+id/number_count"
            android:paddingBottom="5dp"
            android:text=" عنوان برائے تحقیق"

            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/favourite_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/family_star__2_"
            app:tint="@color/toolbar_color" />

        <TextView
            android:id="@+id/title"
            style="@style/quotetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:layout_toStartOf="@+id/title_tv"
            android:text="(عنوان برائے تحقیق)"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black" />


</androidx.appcompat.widget.LinearLayoutCompat>



